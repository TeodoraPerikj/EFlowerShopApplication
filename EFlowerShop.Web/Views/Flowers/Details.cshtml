@model EFlowerShop.Domain.DomainModels.Flower

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*https://img.freepik.com/premium-vector/watercolor-floral-with-succulent-anemone-flower-yellow-daisy_45050-301.jpg?w=2000*@
<style>
    body {
        background-image: url('https://img.freepik.com/premium-photo/flat-lay-floral-frame-with-stucco-background_23-2148442345.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 1375px;
    }
</style>

@*https://img.freepik.com/free-vector/spring-flower-frame-background-with-watercolor_65186-2528.jpg?w=2000*@
<div class="container">
    <h3>Details for a Flower</h3>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FlowerName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FlowerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FlowerImage)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FlowerImage)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FlowerDescription)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FlowerDescription)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FlowerPrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FlowerPrice)
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a> |
        <a asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</div>