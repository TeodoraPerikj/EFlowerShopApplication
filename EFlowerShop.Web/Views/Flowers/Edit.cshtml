@model EFlowerShop.Domain.DomainModels.Flower

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-image: url('https://thumbs.dreamstime.com/b/spring-yellow-flowers-old-wooden-background-107729695.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 1375px;
    }
</style>

<h3>Edit a Flower</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FlowerName" class="control-label"></label>
                <input asp-for="FlowerName" class="form-control" />
                <span asp-validation-for="FlowerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowerImage" class="control-label"></label>
                <input asp-for="FlowerImage" class="form-control" />
                <span asp-validation-for="FlowerImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowerDescription" class="control-label"></label>
                <input asp-for="FlowerDescription" class="form-control" />
                <span asp-validation-for="FlowerDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlowerPrice" class="control-label"></label>
                <input asp-for="FlowerPrice" class="form-control" />
                <span asp-validation-for="FlowerPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" /> |
                <a asp-action="Index" class="btn btn-primary">Back</a>
            </div>
        </form>
    </div>
</div>

