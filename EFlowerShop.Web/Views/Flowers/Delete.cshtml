@model EFlowerShop.Domain.DomainModels.Flower

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-image: url('https://media.istockphoto.com/photos/tulips-on-a-blue-background-picture-id1136983439?b=1&k=20&m=1136983439&s=170667a&w=0&h=oZQkiXz14R1Avvhkufj-fdtz8bJlIDnCZzg3xM-02WY=');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 1375px;
    }
</style>

<h3>Are you sure you want to delete this flower?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerImage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerImage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlowerPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlowerPrice)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-primary">Back</a>
    </form>
</div>
